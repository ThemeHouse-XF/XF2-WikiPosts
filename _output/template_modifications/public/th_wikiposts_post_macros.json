{
    "template": "post_macros",
    "description": "Change last edited line.",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "{{ phrase('last_edited_by_moderator:') }} <xf:date time=\"{$post.last_edit_date}\" />",
    "replace": "<xf:if is=\"$post.Thread.th_wikiposts_is_wikipost\">\n\t{{ phrase('th_wikiposts_last_edited_by_x:', {'user': username_link($post.THWikiPostsLastEditUser, true) }) }} <xf:date time=\"{$post.last_edit_date}\" />\n\t<xf:else />\n\t$0\n</xf:if>"
}